{
  "name": "portable-packages",
  "main": "./lib/portable-packages",
  "version": "0.3.3",
  "description": "Installs and creates portable Atom packages",
  "scripts": {
    "build": "npm run clean && rollup --config",
    "clean": "rimraf ./lib",
    "dev": "npm run start",
    "lint:ts": "eslint ./src --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "prepublishOnly": "npm run clean && npm run build",
    "start": "rollup --watch --config",
    "test": "npm run lint"
  },
  "keywords": [
    "packages",
    "portable packages",
    "portable",
    "portability"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/atom-portable-packages"
  },
  "homepage": "https://atom.io/packages/portable-packages",
  "bugs": {
    "url": "https://github.com/idleberg/atom-portable-packages/issues"
  },
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "activationHooks": [
    "core:loaded-shell-environment"
  ],
  "dependencies": {
    "atom-read-manifest": "^0.6.0",
    "atom-select-list": "^0.8.0",
    "globby": "^11.0.3",
    "ignore": "^5.1.8",
    "jszip": "^3.6.0",
    "ts-loader": "^8.0.18",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.5.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-typescript": "^8.2.0",
    "@types/atom": "^1.36.1",
    "@types/electron": "^1.6.10",
    "@types/jszip": "^3.1.6",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint-plugin-json": "^2.1.2",
    "husky": ">=4 <5",
    "jsonlint": "^1.6.3",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.42.4",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.json": "jsonlint --quiet",
    "*.md": "prettier --write"
  }
}
