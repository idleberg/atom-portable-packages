    "jszip": "^3.2.1",
    "util": "^0.12.0"
  },
  "devDependencies": {
    "@types/atom": "^1.36.1",
    "@types/jszip": "^3.1.6",
    "@types/node": "^12.0.4",
    "husky": "^2.3.0",
    "ts-loader": "^6.0.4",
