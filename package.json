{
  "name": "portable-packages",
  "main": "./lib/portable-packages",
  "version": "0.3.2",
  "description": "Installs and creates portable Atom packages",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode none --watch",
    "lint": "tslint --project ./",
    "prepublishOnly": "npm run build",
    "test": "npm run lint"
  },
  "keywords": [
    "packages",
    "portable packages",
    "portable",
    "portability"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/atom-portable-packages"
  },
  "homepage": "https://atom.io/packages/portable-packages",
  "bugs": {
    "url": "https://github.com/idleberg/atom-portable-packages/issues"
  },
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "activationHooks": [
    "core:loaded-shell-environment"
  ],
  "dependencies": {
    "atom-read-manifest": "^0.3.2",
    "atom-select-list": "^0.7.2",
    "globby": "^10.0.1",
    "ignore": "^5.1.4",
    "jszip": "^3.2.2",
    "util": "^0.12.1"
  },
  "devDependencies": {
    "@types/atom": "^1.36.1",
    "@types/jszip": "^3.1.6",
    "@types/node": "^13.1.2",
    "husky": "^3.1.0",
    "ts-loader": "^6.2.1",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
